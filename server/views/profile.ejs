<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <link rel="stylesheet" href="/main.css">
</head>

<body>
  <!-- Header Section -->
  <section class="header">
    <div class="logo">
      <a href="/">
        <img src="/tweeter.svg" alt="tweeter-logo">
      </a>
    </div>

    <!-- Navigation -->
    <nav class="navigation">
      <ul>
        <li class="navigation-list"><a href="/" class="navigation-link">Home</a></li>
        <li class="navigation-list"><a href="explore" class="navigation-link">Explore</a></li>
        <li class="navigation-list"><a href="bookmarks" class="navigation-link">Bookmarks</a></li>
      </ul>
    </nav>

    <!-- Profile -->
    <div class="profile-menu">
      <div class="profile-info">
        <img src="/avatar.svg" class="profile-img" alt="profile-img">
        <h2 class="profile-name">
          <%= profileUsername %>
        </h2>
        <span class="drop-icon">
          <i class="fa-solid fa-caret-down"></i>
        </span>
      </div>

      <div class="profile-card" hidden>
        <ul>
          <li>
            <span class="icon"><i class="fa-solid fa-circle-user"></i></span>
            <span class="my-profile"><a href="profile" class="navigation-link">My Profile</a></span>
          </li>
          <li>
            <span class="icon"><i class="fa-solid fa-user-group"></i></span>
            <span class="group-chat">Group Chat</span>
          </li>
          <li>
            <span class="icon"><i class="fa-solid fa-gear"></i></span>
            <span class="settings">Settings</span>
          </li>
          <hr>
          <li>
            <span class="icon"><i class="fa-solid fa-arrow-right-to-bracket"></i></span>
            <form action="/logout" method="POST">
              <button class="logout">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section class="profile-page">
    <section class="main">
      <div class="cover-image">
        <img src="/profileCover.jpg" alt="cover-img">
      </div>
      <div class="user-profile">
        <div class="user-image">
          <img src="/profile1.jpg" alt="user-image">
        </div>
        <div class="user-info">
          <div class="user-details">
            <div class="details-container">
              <h2 class="title" style="text-transform: capitalize;">
                <%= profileUsername %>
              </h2>
              <span class="following-count"><b>2569</b> Following</span>
              <span class="follower-count"><b>10.8K</b> Followers</span>
            </div>


            <div class="user-description">
              Photographer & Filmmaker based in Copenhagen, Denmark âœµ ðŸ‡©ðŸ‡°
            </div>
          </div>
          <button type="button" class="follow-button"><i
              class="fa-solid fa-user-plus fa-flip-horizontal"></i>Follow</button>

        </div>
      </div>
    </section>

    <section class="sidebar-section">
      <aside class="sidebar">
        <div class="tweet-list-container">
          <div class="tweet-list">
            <ul>
              <li class="tweet-list-item" selected>Tweets</li>
              <li class="tweet-list-item">Tweets & replies</li>
              <li class="tweet-list-item">Media</li>
              <li class="tweet-list-item">Likes</li>
            </ul>
          </div>
        </div>
      </aside>
      <div class="tweet-saved">
        <% posts.forEach(function(post) { %>
          <a class="tweet-card-container" href="/post/<%= post._id %>">

            <div class="tweet-card">
              <div class="profile-info">
                <img src="/profile1.jpg" alt="profile-img" class="profile-img">
                <div class="profile-details">
                  <span class="name" style="text-transform: capitalize;">
                    <%= profileUsername %>
                  </span>
                  <span class="time-stamp">
                    <%= post.createdDate.toDateString() %>
                  </span>
                </div>
              </div>


              <div class="tweet-cover-info">
                <p class="tweet-description">
                  <%= post.body %>
                </p>
                <img src="/profileCover.jpg" alt="cover-img" class="cover-img">
                <div class="cover-details">
                  <span class="comments-count">449 Comments</span>
                  <span class="retweets-count">59k Retweets</span>
                  <span class="saved-count">234 Saved</span>
                </div>
                <!-- <div class="cover-controls">
                <button class="comment"><i class="fa-regular fa-message fa-flip-horizontal"></i>Comment</button>
                <button class="retweet"><i class="fa-solid fa-retweet"></i>Retweet</button>
                <button class="like"><i class="fa-regular fa-heart"></i>Like</button>
                <button class="save"><i class="fa-regular fa-bookmark"></i>Save</button>
              </div> -->
              </div>

            </div>
          </a>
          <% }) %>
      </div>
    </section>
  </section>
</body>

</html>