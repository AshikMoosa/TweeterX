<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post</title>
</head>

<body>
  <% errors.forEach(function(message) { %>
    <div id="toast" class="error">
      <%= message %>
    </div>
    <% }) %>

      <% success.forEach(function(message) { %>
        <div id="toast" class="success">
          <%= message %>
        </div>
        <% }) %>
          <form action="/post/<%= post._id %>/edit" method="post">
            <textarea name="body" id="post-body" cols="30" rows="10">
    <%= post.body %>
  </textarea>
            <button class="save">save</button>
          </form>
</body>

</html>